{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="dashboard">
        <h1> Ajouter un nouvel article visible par votre communauté</h1>
        <p> Après l'enregistrement de votre article, celui-ci sera directement partagé sur votre blog</p>
        <a href="{{ path('dashboard_article_new') }}">
            <div class="button">
                Nouvel article
            </div>
        </a>

        <h1>Vos articles</h1>

        <ul>
            {% for article in articles %}
                <li><h2>{{ article.title }}</h2>
                </li>


            {% endfor %}
        </ul>

    </div>

{% endblock %}